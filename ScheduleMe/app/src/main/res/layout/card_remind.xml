<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/remind_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_remind_margin_right"
            android:layout_marginLeft="@dimen/card_remind_margin_left"
            android:layout_marginRight="@dimen/card_remind_margin_right"
            android:layout_marginStart="@dimen/card_remind_margin_left"
            android:layout_marginTop="@dimen/card_remind_margin_top"
            android:textColor="@color/colorBlack"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title"
            />

        <TextView
            android:id="@+id/remind_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_remind_margin_right"
            android:layout_marginLeft="@dimen/card_remind_margin_left"
            android:layout_marginRight="@dimen/card_remind_margin_right"
            android:layout_marginStart="@dimen/card_remind_margin_left"
            android:layout_marginTop="@dimen/card_remind_margin_top"
            android:layout_marginBottom="@dimen/card_remind_margin_bot"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/remind_title"

            tools:text="Description"/>

        <TextView
            android:id="@+id/remind_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_remind_margin_right"
            android:layout_marginLeft="@dimen/card_remind_margin_left"
            android:layout_marginRight="@dimen/card_remind_margin_right"
            android:layout_marginStart="@dimen/card_remind_margin_left"
            android:layout_marginTop="@dimen/card_remind_margin_top"
            android:layout_marginBottom="@dimen/card_remind_margin_bot"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/remind_description"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="06:10:2015"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>